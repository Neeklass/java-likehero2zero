{
    "name": "Java 21 Environment",
    "dockerComposeFile": [
        "../docker/compose.yaml"
    ],
    "service": "app",
    "workspaceFolder": "/workspaces/app", // needs to be the same as compose.yaml
    "features": {
        "ghcr.io/devcontainers/features/java:1": {
            "version": "21",
            "installMaven": "true"
        }
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "vscjava.vscode-java-pack",
                "redhat.vscode-community-server-connector"
            ]
        }
    },
    "remoteUser": "vscode"
}